<p id="notice"><%= notice %></p>

<h1>Lista de Equipos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Logo</th>
      <th>Semestre</th>
      <th>Fase</th>
      <% if user_signed_in? && current_user.is_admin? %>
        <th>Key</th>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.logo %></td>
        <td><%= team.semester %></td>
        <td><%= team.phase %></td>
        <% if user_signed_in? && current_user.is_admin? %>
          <td><%= team.key.des %></td>
          <td><%= link_to 'Show', team %></td>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
          <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>